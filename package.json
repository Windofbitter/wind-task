{
  "name": "wind-task",
  "version": "0.3.1",
  "type": "module",
  "description": "Minimal MCP server for file-backed tasks with TODO/ACTIVE/DONE and archive",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "tui": "tsx src/tui.ts",
    "tui:dist": "node dist/tui.js",
    "prepublishOnly": "npm run build",
    "migrate:content": "node scripts/migrate-content.mjs"
  },
  "bin": {
    "wind-task": "dist/index.js",
    "wind-task-tui": "dist/tui.js",
    "mcp-task-server": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "blessed": "^0.1.81"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/node": "^24.10.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3"
  }
}
